<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- User Avatar Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logoCard"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="70dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Avatar Image -->
                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_user_avatar"
                    android:scaleType="centerCrop"
                    android:contentDescription="User Avatar"/>

                <!-- Camera Icon Overlay với màu xanh lá -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnChangeAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#4CAF50"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_menu_camera"
                        android:padding="8dp"
                        app:tint="#FFFFFF"
                        android:contentDescription="Change Avatar"/>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào mừng trở lại!"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/logoCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập để tiếp tục"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Login Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/white">

                <!-- Username Input với Icon xanh dương -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                    app:startIconTint="#2196F3"
                    app:endIconMode="clear_text"
                    app:endIconTint="#2196F3"
                    app:boxStrokeColor="#2196F3"
                    app:hintTextColor="#2196F3"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tên đăng nhập hoặc Email"
                        android:inputType="textEmailAddress"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textColor="#333333"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input với Icon cam -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:startIconTint="#FF9800"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#FF9800"
                    app:boxStrokeColor="#FF9800"
                    app:hintTextColor="#FF9800"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mật khẩu"
                        android:inputType="textPassword"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textColor="#333333"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Remember Me & Forgot Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <CheckBox
                        android:id="@+id/cbRememberMe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ghi nhớ đăng nhập"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:buttonTint="#2196F3"/>

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quên mật khẩu?"
                        android:textSize="14sp"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <!-- Login Button - Xanh dương -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="ĐĂNG NHẬP"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:elevation="4dp"
                    app:icon="@android:drawable/ic_menu_send"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF"
                    android:backgroundTint="#2196F3"
                    android:layout_marginBottom="16dp"/>

                <!-- Biometric Login - Xanh lá -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBiometric"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Đăng nhập bằng vân tay"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_secure"
                    app:iconTint="#4CAF50"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#4CAF50"
                    app:strokeWidth="2dp"
                    android:textColor="#4CAF50"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Social Login Divider -->
        <LinearLayout
            android:id="@+id/dividerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/formCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Hoặc đăng nhập với  "
                android:textSize="14sp"
                android:textColor="#757575"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0"/>
        </LinearLayout>

        <!-- Social Login Buttons với màu tương ứng -->
        <LinearLayout
            android:id="@+id/socialLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/dividerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Google - Đỏ -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnGoogle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFEBEE"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_dialog_email"
                    android:padding="15dp"
                    app:tint="#DB4437"/>
            </androidx.cardview.widget.CardView>

            <!-- Facebook - Xanh dương -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnFacebook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:backgroundTint="#E3F2FD"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_dialog_info"
                    android:padding="15dp"
                    app:tint="#2196F3"/>
            </androidx.cardview.widget.CardView>

            <!-- Twitter - Xanh lá -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnTwitter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:backgroundTint="#E8F5E9"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_share"
                    android:padding="15dp"
                    app:tint="#4CAF50"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Sign Up Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/socialLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa có tài khoản? "
                android:textSize="14sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký ngay"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>