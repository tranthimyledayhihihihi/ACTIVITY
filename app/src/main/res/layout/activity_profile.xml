<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient Background - Reduced Height -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/gradient_background"
            android:padding="16dp">

            <!-- Settings Icon (Click to Logout) - Emoji Style -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvSettings"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="26dp"
                app:cardElevation="6dp"
                android:backgroundTint="#2196F3"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚙️"
                    android:textSize="28sp"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <!-- Avatar - Smaller Size -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_user_avatar"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <!-- Edit Avatar Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnEditAvatar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="45dp"
                android:layout_marginStart="50dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                android:backgroundTint="#2196F3">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_gravity="center"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <!-- Content Container - Adjusted Spacing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="-25dp">

            <!-- Welcome Card - Compact -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xin chào, Admin!"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvLoginTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đăng nhập lúc: 10:30 AM"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Account Information Card - Compact -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THÔNG TIN TÀI KHOẢN"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginBottom="12dp"/>

                    <!-- Username -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:background="#E3F2FD">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#2196F3">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_myplaces"
                                android:layout_gravity="center"
                                app:tint="#FFFFFF"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tên đăng nhập"
                                android:textSize="11sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:id="@+id/tvUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="admin"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:background="#E8F5E9">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#4CAF50">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_dialog_email"
                                android:layout_gravity="center"
                                app:tint="#FFFFFF"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textSize="11sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="admin@example.com"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="#FFF3E0">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#FF9800">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/stat_sys_phone_call"
                                android:layout_gravity="center"
                                app:tint="#FFFFFF"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số điện thoại"
                                android:textSize="11sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+84 123 456 789"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Actions Card - Compact -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THAO TÁC NHANH"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Edit Profile Button -->
                        <LinearLayout
                            android:id="@+id/btnEditProfile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackground">

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22.5dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#E3F2FD"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/ic_menu_edit"
                                    android:layout_gravity="center"
                                    app:tint="#2196F3"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chỉnh sửa"
                                android:textSize="11sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Change Password Button -->
                        <LinearLayout
                            android:id="@+id/btnChangePassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackground">

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22.5dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#FFF3E0"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/ic_lock_idle_lock"
                                    android:layout_gravity="center"
                                    app:tint="#FF9800"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đổi mật khẩu"
                                android:textSize="11sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Privacy Button -->
                        <LinearLayout
                            android:id="@+id/btnPrivacy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackground">

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22.5dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#E8F5E9"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/ic_menu_view"
                                    android:layout_gravity="center"
                                    app:tint="#4CAF50"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bảo mật"
                                android:textSize="11sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Statistics & Status Combined Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Statistics Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THỐNG KÊ"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="#E3F2FD">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="156"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#2196F3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lần đăng nhập"
                                android:textSize="11sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#E0E0E0"
                            android:layout_marginHorizontal="6dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="#E8F5E9">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="247"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày hoạt động"
                                android:textSize="11sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Status Section -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRẠNG THÁI"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Trạng thái:"
                            android:textSize="12sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Đang hoạt động"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ngày tạo:"
                            android:textSize="12sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05/10/2024"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loại tài khoản:"
                            android:textSize="12sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium ⭐"
                            android:textSize="12sp"
                            android:textColor="#FF9800"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Logout Button - Compact -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ĐĂNG XUẤT"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_lock_power_off"
                app:iconGravity="textStart"
                app:backgroundTint="#F44336"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>